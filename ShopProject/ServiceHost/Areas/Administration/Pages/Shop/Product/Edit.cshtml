@page
@model ServiceHost.Areas.Administration.Pages.Shop.Product.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "ویرایش محصولات";
}


<div class="row">
    <div class="col-12">
        <form method="post"
              data-callback=""
              data-action="Refresh"
              enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Command.Name" class="control-label">نام</label>
                        <input type="text" class="form-control" asp-for="Command.Name" onchange="makeSlug('Command_Name', 'Command_Slug')">
                        <span asp-validation-for="Command.Name" class="error"></span>
                    </div>
                </div><div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Command.Slug" class="control-label">اسلاگ</label>
                        <input type="text" class="form-control" asp-for="Command.Slug">
                        <span asp-validation-for="Command.Slug" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Command.BrandId" class="control-label">برند ها</label>
                        <select class="form-control" asp-for="Command.BrandId" asp-items="@Model.SelectListBrand">
                            <option value="0">برند ها ...</option>
                        </select>
                        <span asp-validation-for="Command.BrandId" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Command.CategoryId" class="control-label">گروه محصولات</label>
                        <select class="form-control" asp-for="Command.CategoryId" asp-items="@Model.SelectListCategory">
                            <option value="0">گروه محصولات ...</option>
                        </select>
                        <span asp-validation-for="Command.CategoryId" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Command.PictureAlt" class="control-label">Alt</label>
                        <input type="text" class="form-control" asp-for="Command.PictureAlt">
                        <span asp-validation-for="Command.PictureAlt" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Command.PictureTitle" class="control-label">عنوان</label>
                        <input type="text" class="form-control" asp-for="Command.PictureTitle">
                        <span asp-validation-for="Command.PictureTitle" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Command.Picture" class="control-label">عکس</label>
                        <input type="file" class="form-control" asp-for="Command.Picture" accept="image/*">
                        <span asp-validation-for="Command.Picture" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group no-margin">
                        <label asp-for="Command.Description" class="control-label">توضیحات</label>
                        <textarea class="form-control autogrow" id="BodyContent" asp-for="Command.Description" onchange="fillField('Description', 'MetaDescription')"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                        <span asp-validation-for="Command.Description" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group no-margin">
                        <label asp-for="Command.Specifications" class="control-label">مشخصات فنی</label>
                        <textarea class="form-control autogrow" asp-for="Command.Specifications"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                        <span asp-validation-for="Command.Specifications" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Command.Keywords" class="control-label">کلمات کلیدی</label>
                        <input type="text" class="form-control" asp-for="Command.Keywords">
                        <span asp-validation-for="Command.Keywords" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group no-margin">
                        <label asp-for="Command.MetaDescription" class="control-label">توضیحات متا</label>
                        <textarea class="form-control autogrow" asp-for="Command.MetaDescription"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                        <span asp-validation-for="Command.MetaDescription" class="error"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id" />

            <div>
                <button type="button" class="btn btn-default waves-effect" aasp-page="./Index">بستن</button>
                <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
            </div>
        </form>
    </div>

</div>