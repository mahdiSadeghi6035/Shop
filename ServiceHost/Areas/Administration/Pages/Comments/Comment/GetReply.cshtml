@model CommentManagement.Application.Contract.CommentApp.CreateComment


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">پاسخ به پرسش</h4>
</div>

<form asp-page="./Index" asp-page-handler="Reply"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
       
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Message" class="control-label">پیغام</label>
                    <input type="text" class="form-control" asp-for="Message">
                    <span asp-validation-for="Message" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="ParentId" value="@Model.ParentId" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">تایید</button>
    </div>
</form>