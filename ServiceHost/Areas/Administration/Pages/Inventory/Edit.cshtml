@model InventoryManagement.Application.Contract.InventoryApp.EditInventory


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویراش انبار</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
             <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PurchasePrice" class="control-label">قیمت خرید</label>
                    <input type="number" class="form-control" asp-for="PurchasePrice">
                    <span asp-validation-for="PurchasePrice" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UnitPrice" class="control-label">قیمت</label>
                    <input type="number" class="form-control" asp-for="UnitPrice">
                    <span asp-validation-for="UnitPrice" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">محصولات</label>
                    <select class="form-control" asp-for="ProductId" asp-items='@new SelectList(@Model.ModelProducts,"Id","Name")'>
                        <option value="0">محصولات ...</option>
                    </select>
                    <span asp-validation-for="ProductId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Color" class="control-label">رنگ محصول</label>
                    <input type="color" class="form-control" asp-for="Color">
                    <span asp-validation-for="Color" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group check-box">
                    <div class="checkbox checkbox-primary">
                        <input asp-for="Status">
                        <label asp-for="Status">
                            توقف تولید
                        </label>
                    </div>
                </div>
            </div>

        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>